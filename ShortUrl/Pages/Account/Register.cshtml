@page
@model ShortUrl.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SubscriptionTier">Subscription Tier</label>
                <select asp-for="Input.SubscriptionTier" class="form-control">
                    <option value="Free">Free (Create/Delete URLs)</option>
                    <option value="Basic">Basic ($5/month - Stats)</option>
                    <option value="Professional">Professional ($10/month - UTM Parameters, Edit URLs)</option>
                    <option value="Enterprise">Enterprise ($20/month - QR Codes)</option>
                </select>
                <span asp-validation-for="Input.SubscriptionTier" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <p class="mt-3">
            Already have an account? <a asp-page="/Account/Login">Log in</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}