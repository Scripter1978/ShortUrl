@page
@model ShortUrl.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0">Register</h2>
        </div>
        <div class="card-body">
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
              <label asp-for="Input.Email"></label>
              <input asp-for="Input.Email" class="form-control" />
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
              <label asp-for="Input.Password"></label>
              <input asp-for="Input.Password" class="form-control" />
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
              <label for="SubscriptionTier">Subscription Tier</label>
              <select asp-for="Input.SubscriptionTier" class="form-control">
                <option value="Free">Free (Create/Delete URLs)</option>
                <option value="Basic">Basic (\$5/month - Stats)</option>
                <option value="Professional">Professional (\$10/month - UTM Parameters, Edit URLs)</option>
                <option value="Enterprise">Enterprise (\$20/month - QR Codes)</option>
              </select>
              <span asp-validation-for="Input.SubscriptionTier" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
          <div class="mt-3">
            Already have an account? <a asp-page="/Account/Login">Log in</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}