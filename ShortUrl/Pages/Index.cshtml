@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "URL Shortener";
}

<div class="container py-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="row justify-content-center mb-4">
            <div class="col-lg-10">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-link fa-4x mb-3 text-gradient"></i>
                                <h3 class="mb-3">Shorten URL</h3>
                                <p class="mb-4">Create shortened links that are easy to share and track.</p>
                                <a asp-page="/ShortenUrl" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus-circle me-2"></i>Create Short URL
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-address-card fa-4x mb-3 text-gradient"></i>
                                <h3 class="mb-3">vCard Manager</h3>
                                <p class="mb-4">Create and manage your digital business cards.</p>
                                <a asp-page="/VCardManager" class="btn btn-primary btn-lg">
                                    <i class="fas fa-id-card me-2"></i>Manage vCards
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Keep the existing table of shortened URLs -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0">Your Shortened URLs</h2>
                        <a asp-page="/ShortenUrl" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus-circle me-1"></i> New URL
                        </a>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.UserUrls.Any())
                        {
                            <!-- Existing table content -->
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <!-- Keep existing thead and tbody -->
                                    <thead class="table-light">
                                        <tr>
                                            <th>Short URL</th>
                                            <th>Created At</th>
                                            @if (User.IsInRole("Professional") || User.IsInRole("Enterprise"))
                                            {
                                                <th>Destination URLs</th>
                                                <th>Social Media Variations</th>
                                            }
                                            @if (User.IsInRole("Enterprise"))
                                            {
                                                <th>Expiration Date</th>
                                                <th>Password Protected</th>
                                            }
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var url in Model.UserUrls)
                                        {
                                            <!-- Keep existing row content -->
                                            <tr>
                                                <td><a href="@($"{Model.AppUrl}/{url.Code}")" class="text-decoration-none" target="_blank">@url.Code</a></td>
                                                <td><span class="text-muted small">@url.CreatedAt.ToString("g")</span></td>
                                                <!-- Keep all existing columns -->
                                                @if (User.IsInRole("Professional") || User.IsInRole("Enterprise"))
                                                {
                                                    <!-- Keep existing Professional/Enterprise columns -->
                                                    <td>
                                                        @foreach (var dest in url.DestinationUrls)
                                                        {
                                                            <div class="small mb-2">
                                                                <div class="text-truncate" style="max-width: 200px;">
                                                                    <a href="@dest.Url" target="_blank" class="text-decoration-none">@dest.Url</a>
                                                                </div>
                                                                <!-- Keep other destination URL details -->
                                                            </div>
                                                        }
                                                    </td>
                                                    <td>
                                                        <!-- Keep OG metadata variations -->
                                                    </td>
                                                }
                                                @if (User.IsInRole("Enterprise"))
                                                {
                                                    <!-- Keep Enterprise-specific columns -->
                                                    <td>@(url.ExpirationDate?.ToString("g") ?? "None")</td>
                                                    <td>
                                                        @if (string.IsNullOrEmpty(url.Password))
                                                        {
                                                            <span class="badge bg-secondary">No</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">Yes</span>
                                                        }
                                                    </td>
                                                }
                                                <td class="text-end">
                                                    <!-- Keep action buttons -->
                                                    <div class="btn-group">
                                                        <!-- Edit, QR, Delete buttons -->
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- Keep pagination -->
                            <nav aria-label="Pagination" class="mt-3">
                                <ul class="pagination">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="?CurrentPage=@(Model.CurrentPage - 1)">Previous</a>
                                    </li>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="?CurrentPage=@i">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="?CurrentPage=@(Model.CurrentPage + 1)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center text-muted small mb-3">
                                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)-@(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalUrls)) of @Model.TotalUrls items
                            </div>
                        }
                        else
                        {
                            <div class="p-4 text-center">
                                <i class="fas fa-link fa-3x text-muted mb-3"></i>
                                <p>You haven't created any URLs yet.</p>
                                <a asp-page="/ShortenUrl" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-1"></i> Create Your First Short URL
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Keep the existing welcome page for non-authenticated users -->
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="card shadow-sm p-4">
                    <h1 class="display-6 mb-4">Welcome to URL Shortener</h1>
                    <p class="lead">Create shortened links that are easy to share and track.</p>
                    <hr class="my-4">
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 gap-3">Log in</a>
                        <a asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Register</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>