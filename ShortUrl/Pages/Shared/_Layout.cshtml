<!DOCTYPE html>
<html lang="en">
<head>
     <meta name="description" content="Professional URL shortening service with advanced analytics and custom branding options.">
    <meta name="keywords" content="url shortener, link shortener, short links, analytics, custom urls">

    <!-- Open Graph -->
    <meta property="og:title" content="@ViewData["Title"] - URL Shortener Pro">
    <meta property="og:description" content="Professional URL shortening service with advanced analytics.">
    <meta property="og:type" content="website">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    <!-- Modern Fonts & Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #6366f1;
            --primary-dark: #4f46e5;
            --secondary-color: #64748b;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --dark-color: #1e293b;
            --light-bg: #f8fafc;
            --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: #334155;
            background-color: #ffffff;
        }

        .navbar-modern {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95) !important;
            border-bottom: 1px solid rgba(226, 232, 240, 0.8);
            box-shadow: var(--shadow);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary-color) !important;
        }

        .nav-link {
            font-weight: 500;
            transition: all 0.2s ease;
            border-radius: 0.5rem;
            margin: 0 0.25rem;
            padding: 0.5rem 1rem !important;
        }

        .nav-link:hover {
            background-color: var(--light-bg);
            color: var(--primary-color) !important;
            transform: translateY(-1px);
        }

        .nav-link.btn-primary {
            background: var(--primary-color);
            color: white !important;
            border: none;
        }

        .nav-link.btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .nav-link.btn-outline-danger {
            border: 1px solid #ef4444;
            color: #ef4444 !important;
        }

        .nav-link.btn-outline-danger:hover {
            background: #ef4444;
            color: white !important;
        }

        .container-modern {
            padding-top: 2rem;
            padding-bottom: 2rem;
            min-height: calc(100vh - 120px);
        }

        .dropdown-menu {
            border: none;
            box-shadow: var(--shadow-lg);
            border-radius: 0.75rem;
            padding: 0.5rem;
        }

        .dropdown-item {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover {
            background-color: var(--light-bg);
            color: var(--primary-color);
        }

        .badge-role {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.5rem;
            margin-left: 0.5rem;
        }

        @@media (max-width: 991.98px) {
            .navbar-nav {
                padding-top: 1rem;
            }
            
            .nav-link {
                margin: 0.25rem 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-modern fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-link me-2"></i>
                URL Shortener <span class="text-primary">Pro</span>
            </a>
            
            <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    @if (User.Identity is { IsAuthenticated: true })
                    {
                        <a class="nav-link" asp-page="/Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                        
                        @if (User.IsInRole("Basic") || User.IsInRole("Professional") || User.IsInRole("Enterprise"))
                        {
                            <a class="nav-link" href="/Stats">
                                <i class="fas fa-chart-line me-1"></i>Stats
                            </a>
                        }
                        
                        @if (User.IsInRole("Free") || User.IsInRole("Basic") || User.IsInRole("Professional"))
                        {
                            <a class="nav-link btn-primary" asp-page="/Account/Upgrade">
                                <i class="fas fa-arrow-up me-1"></i>Upgrade
                            </a>
                        }
                        
                        @if (User.IsInRole("Basic") || User.IsInRole("Professional") || User.IsInRole("Enterprise"))
                        {
                            <a class="nav-link btn-outline-danger" asp-page="/Account/CancelSubscription">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        }
                        
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                @User.Identity.Name?.Split('@').FirstOrDefault()
                                @if (User.IsInRole("Professional"))
                                {
                                    <span class="badge bg-primary badge-role">Pro</span>
                                }
                                else if (User.IsInRole("Enterprise"))
                                {
                                    <span class="badge bg-dark badge-role">Enterprise</span>
                                }
                                else if (User.IsInRole("Basic"))
                                {
                                    <span class="badge bg-success badge-role">Basic</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-role">Free</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/VCardManager">vCard Manager</a>
                                </li>
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="/Account/Logout" class="d-inline">
                                        <button type="submit" class="nav-link btn btn-link border-0">
                                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="nav-link" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                        <a class="nav-link btn-primary" asp-page="/Account/Register">
                            <i class="fas fa-user-plus me-1"></i>Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container-modern" style="margin-top: 76px;">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add smooth scrolling and modern interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Add active class to current page
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>